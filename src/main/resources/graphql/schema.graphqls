type Query {
    stops: [Stop]
    stopByIds(id: ID): Stop
    userStops: [UserStop]
    userStop(id: ID): UserStop
}

type Mutation {
    addUserStop(stopIds: [String]): UserStop
    updateUserStop(id: ID!, stopIds: [String]): UserStop
}

type Stop {
    id: ID
    gtfsId: String
    name: String
    lat: Float
    lon: Float
}

type UserStop {
    id: String
    stopIds: [String]
}
