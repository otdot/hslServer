type Query {
    stops(pageNum: Int!, pageSize: Int!): StopRes
    stopById(id: ID): Stop
    userStops: [UserStop]
    userStop(id: ID): UserStop
    getUser(id: ID): User
}

type Mutation {
    addUserStop(stopIds: UserStopInput): UserStop
    addStop(stop: StopInput): Stop
    updateUserStop(id: ID!, stopIds: [String]): UserStop
    addUser(userInput: UserInput): User
}

type Stop {
    gtfsId: String
    name: String
    lat: Float
    lon: Float
 }

type StopRes {
    stops: [Stop]
    hasNext: Boolean
}

type UserStop {
    id: String
    user: User
    stops: [Stop]
}

type User {
    id: String
    username: String
    password: String
}

input UserInput {
    username: String
    password: String
}

input UserStopInput {
    userId: String
    gtfsId: [String]
}

input StopInput {
    gtfsId: String
    name: String
    lat: Float
    lon: Float
}
